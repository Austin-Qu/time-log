<% if flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Overtime Error", sticky: false) %>
<% elsif flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Overtime Alert", sticky: false) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Overtime Notification", sticky: false) %>
<% end %>
